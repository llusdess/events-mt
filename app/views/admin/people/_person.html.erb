  <td class="hidden px-4 py-3 text-right md:table-cell">
    <%= link_to 'Show', admin_person_path(person) %>
    <%= link_to 'Edit', edit_admin_person_path(person) %>
    <%= link_to 'Destroy', admin_person_path(person), method: :delete, data: { confirm: 'Are you sure?' } %>
  </td>
</tr>