<tr class="text-gray-700">
  <td class="hidden w-10 py-3 pl-1 pr-1 text-center bg-gray-100 border-r sm:table-cell">
    <input type="checkbox" class="w-5 h-5 text-blue-500 form-checkbox">
  </td>
  <td class="px-1 text-center">
    <i class="text-sm text-gray-300 far fa-link"></i>
  </td>
  <td class="py-3 pl-0 pr-4">
    <%= link_to admin_person_path(person), class: "flex flex-row align-middle items-center text-sm" do %>
      <div class="hidden w-8 h-8 mr-3 md:block">
        <%= render(AvatarComponent.new(email: person.email, name: person.name)) %>
      </div>
      <div>
        <p class="font-semibold"><%= person.name %></p>
        <p class="text-xs font-medium text-gray-600"><%= person.email %></p>
      </div>
    <% end %>
  </td>
  <td class="px-4 py-3"><%= person.degrees %></td>
