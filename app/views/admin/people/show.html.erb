<%= content_for :page_title do %>
<div class="flex flex-row items-center">
  <h1 class="hidden text-2xl font-bold md:block">People / </h1>
  <span class="ml-2 text-2xl font-light"><%= @person.name %></span>
</div>
<% end %>

<%= content_for :page_tools do %>
<button class="inline-flex items-center px-3 py-1 mr-2 text-sm font-bold text-white bg-indigo-500 rounded">
  <%= link_to 'Back', :back %>
</button>
<% end %>

<section class="flex px-4 py-2">
  <div class="w-full md:w-64">
    <div class="items-center justify-center w-full pb-6 mx-auto overflow-hidden md:max-w-sm">
      <div class="relative h-16 bg-gray-100">
      </div>
      <div class="bg-white border shadow-xs">
        <div class="relative w-24 h-24 mx-auto -my-12 overflow-hidden border-4 border-white rounded-full shadow">
          <%= render(AvatarComponent.new(email: @person.email, name: @person.name, size: 96)) %>
        </div>
        <div class="mt-16">
          <h1 class="text-lg font-semibold text-center">
            <%= @person.name %> 
          </h1>
          <p class="text-sm text-center text-gray-600">
            <%= @person.email %>
          </p>
        </div>
        <div class="pt-3 mx-6 mt-2 text-center">
          <div class="px-4 py-2 text-xs font-semibold text-gray-700 bg-gray-200 border rounded-full">
            <%= link_to 'Edit', edit_admin_person_path(@person) %>
          </div>
        </div>
        <div class="py-2 mt-4 border-t m">
          <a href="#" class="flex px-2 py-2 hover:bg-gray-100">
            <div class="w-6 text-center text-gray-800">
              <i class="w-5 h-5 mx-auto fal fa-cog"></i>
            </div>
            <div class="pl-3 leading-snug">
              <p class="text-sm font-medium leading-none text-gray-800">Account settings</p>
              <p class="text-xs text-gray-500">Usage, billing, branding, teams</p>
            </div>
          </a>
          <a href="#" class="flex px-2 py-2 hover:bg-gray-100">
            <div class="w-6 text-center text-gray-800">
              <i class="w-5 h-5 mx-auto fal fa-user-circle"></i>
            </div>
            <div class="pl-3 leading-snug">
              <p class="text-sm font-medium leading-none text-gray-800">Personal settings</p>
              <p class="text-xs text-gray-500">Email, profile, notifications</p>
            </div>
          </a>
          <a href="#" class="flex px-2 py-2 hover:bg-gray-100">
            <div class="w-6 text-center text-green-600">
              <i class="w-5 h-5 mx-auto fal fa-sparkles"></i>
            </div>
            <div class="pl-3 leading-snug">
              <p class="text-sm font-medium leading-none text-gray-800">Apps &amp; integrations</p>
              <p class="text-xs text-gray-500">Google, slack, mail</p>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>








