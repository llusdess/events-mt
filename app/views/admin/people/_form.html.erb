      <%= form.text_field :phone %>
    </div>
  
    <div class="field">
      <%= form.label :phone_extension %>
      <%= form.number_field :phone_extension %>
    </div>
  
    <div class="field">
      <%= form.label :fax %>
      <%= form.text_field :fax %>
    </div>
  
    <div class="field">
      <%= form.label :fax_extension %>
      <%= form.number_field :fax_extension %>
    </div>
  
    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
